#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while (t--) {
        int n ;
        cin >> n;
        
        int a[n];
        int b[n];

        for(int i = 0 ; i < n ; i++) {
            cin >> a[i];
        }
        for(int i = 0 ; i < n ; i++) {
            cin >> b[i];
        }
        int flag = 1 , cnt = 0;

        while(flag){
            cnt++;
            flag = 0;
            for(int i = 0 ; i < n ; i++) {
                if(a[i] > b[i] && flag == 0) {
                    a[i]-=1;
                    flag = 1;
                }
                else if(a[i] < b[i]){
                    a[i]+=1;
                }
            }
        }
    cout << cnt << endl;
    }

    return 0;
}
