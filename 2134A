#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    int T;
    if (!(cin >> T)) return 0;
    while (T--) {
        long long n, a, b;
        cin >> n >> a >> b;
        // Condition 1: blue segment must have same parity as n
        if ((b & 1LL) != (n & 1LL)) {
            cout << "NO\n";
            continue;
        }
        // Condition 2: if red extends beyond blue, it must also match parity of n
        if (a > b && ((a & 1LL) != (n & 1LL))) {
            cout << "NO\n";
            continue;
        }
        cout << "YES\n";
    }
    return 0;
}
