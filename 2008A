#include<bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin >> t;

    while(t--) {
        int a,b;
        cin >> a >> b;

        if(a%2==0 && b%2==0){
            cout << "YES" << endl;
            continue;
        }
        else if(a*1 == b*2){
            cout << "YES" << endl;
            continue;
        }
        else if(a>0 && b>0){
            if((a*1+b*2)%2 == 0){
                cout << "YES" << endl;
                continue;
            }
        }
        cout << "NO" << endl;
    }
    return 0;
}
