#include <bits/stdc++.h>
using namespace std;
int main(){
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    if(!(cin>>t)) return 0;
    while(t--){
        int n,k,x;
        cin>>n>>k>>x;
        if(x!=1){
            cout<<"YES\n"<<n<<"\n";
            for(int i=0;i<n;i++){
                if(i) cout<<" ";
                cout<<1;
            }
            cout<<"\n";
        } else {
            if(k==1){
                cout<<"NO\n";
            } else {
                if(n%2==0){
                    cout<<"YES\n"<<n/2<<"\n";
                    for(int i=0;i<n/2;i++){
                        if(i) cout<<" ";
                        cout<<2;
                    }
                    cout<<"\n";
                } else {
                    if(k>=3 && n>=3){
                        int cnt = 1 + (n-3)/2;
                        cout<<"YES\n"<<cnt<<"\n";
                        cout<<3;
                        for(int i=0;i<(n-3)/2;i++){
                            cout<<" "<<2;
                        }
                        cout<<"\n";
                    } else {
                        cout<<"NO\n";
                    }
                }
            }
        }
    }
    return 0;
}
