#include <iostream>
using namespace std;
typedef long long ll;

int main() {
    int t;
    cin >> t;
    while (t--) {
        ll a, b;
        cin >> a >> b;
        ll ans = -1;

        ll sum1 = a + b;
        if (sum1 % 2 == 0) ans = max(ans, sum1);

        ll sum2 = a * b + 1;
        if (sum2 % 2 == 0) ans = max(ans, sum2);

        if (b % 2 == 0) {
            ll sum3 = a * 2 + b / 2;
            if (sum3 % 2 == 0) ans = max(ans, sum3);

            ll sum4 = a * (b / 2) + 2;
            if (sum4 % 2 == 0) ans = max(ans, sum4);
        }

        cout << ans << endl;
    }
    return 0;
}
