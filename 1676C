#include <bits/stdc++.h>
using namespace std;

int find(string perm , string temp , int m) {
    int cost = 0 ;
    for(int i = 0 ; i < m ; i++ ) {
        char c1 = perm[i];
        char c2 = temp[i];
        int diff = abs(int(c2) - int(c1));
        cost+=diff;
    }
    return cost;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n , m;
        cin >> n >> m;

        string s1;
        vector<string> s;
        for(int i = 0 ; i < n ; i++) {
            cin >> s1;
            s.push_back(s1);
        }

        int mincost = INT_MAX;

        for(int i = 0 ; i < n - 1 ; i++) {  
            string perm = s[i];
            for(int j = i+1 ; j < n ; j++) {
                string temp = s[j];
                mincost = min(mincost, find(perm,temp,m));
            }
        }
        cout << mincost << endl;
    }
    return 0;
}
