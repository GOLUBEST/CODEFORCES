#include<bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while(t--) {
        int n,k;
        cin >> n >> k;

        int arr[n];
        for(int i = 0 ; i < n ; i++) {
            cin >> arr[i];
        }

        int cnt = 0;
        int gold_coin = 0;

        for(int i = 0 ; i < n ; i++) {
            if(arr[i] >= k){
                gold_coin += arr[i];
            }
            else if(arr[i] == 0){
                if(gold_coin > 0){
                    gold_coin--;
                    cnt++;
                }
            }
        }
        cout << cnt << endl;
    }
}
