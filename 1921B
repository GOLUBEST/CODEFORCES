#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    if (!(cin >> t)) return 0;
    while (t--) {
        int n;
        string s, f;
        cin >> n >> s >> f;
        int cnt01 = 0, cnt10 = 0;
        for (int i = 0; i < n; ++i) {
            if (s[i] == '0' && f[i] == '1') ++cnt01;
            else if (s[i] == '1' && f[i] == '0') ++cnt10;
        }
        cout << max(cnt01, cnt10) << '\n';
    }
    return 0;
}
