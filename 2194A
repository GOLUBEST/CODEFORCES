#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    if (!(cin >> t)) return 0;
    while (t--) {
        long long n, w;
        cin >> n >> w;

        if (w == 1) {
            cout << 0 << '\n';
            continue;
        }

        long long need = n - (w - 1);
        long long k;
        if (need <= 0) {
            k = 0;
        } else {
            k = (need + w - 1) / w;
        }

        long long removed = n - k;
        cout << removed << '\n';
    }

    return 0;
}
