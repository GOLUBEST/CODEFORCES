#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    while (t--) {
        int n;
        cin >> n;

        string s;
        cin >> s;

        int cnt[26] = {0};

        for (int i = 0; i < n; i++) {
            cnt[s[i] - 'A']++;
        }

        int solved = 0;
        for (int i = 0; i < 26; i++) {
            if (cnt[i] >= i + 1) {
                solved++;
            }
        }

        cout << solved << "\n";
    }
    return 0;
}
