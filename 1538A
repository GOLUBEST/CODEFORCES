#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for (int i = 0; i < n; ++i) {
            cin >> a[i];
        }
        int min_pos = min_element(a.begin(), a.end()) - a.begin();
        int max_pos = max_element(a.begin(), a.end()) - a.begin();
        if (min_pos > max_pos) swap(min_pos, max_pos);
        int moves1 = max_pos + 1;
        int moves2 = n - min_pos;
        int moves3 = (min_pos + 1) + (n - max_pos);
        int res = min({moves1, moves2, moves3});
        cout << res << endl;
    }
    return 0;
}
