#include<bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin >> t;

    while(t--) {
        int a,b,c;
        cin >> a >> b >> c;
        int t1 = 0 , t2 = 0;
        t1 = abs(a-1);
        if(c==1){
            t2 = abs(b-1);
        }
        else{
            t2 = abs(b-c) + abs(c-1);
        }
        if(t1<t2){
            cout << 1 << endl;
        }
        else if(t1>t2){
            cout << 2 << endl;
        }
        else{
            cout << 3 << endl;
        }
    }
}
