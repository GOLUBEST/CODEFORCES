#include <iostream>
#include <vector>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        string enemy, gregor;
        cin >> enemy >> gregor;
        vector<bool> used(n, false);
        
        int ans = 0;
        for (int i = 0; i < n; i++) {
            if (gregor[i] == '1') {
                if (enemy[i] == '0') {
                    ans++;
                }
                else if (i > 0 && enemy[i-1] == '1' && !used[i-1]) {
                    used[i-1] = true;
                    ans++;
                }
                else if (i+1 < n && enemy[i+1] == '1' && !used[i+1]) {
                    used[i+1] = true;
                    ans++;
                }
            }
        }
        cout << ans << "\n";
    }
    return 0;
} 
