#include <iostream>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        long long n, a, b, c;
        cin >> n >> a >> b >> c;
        long long arr[3] = {a, b, c};
        long long sum = a + b + c;
        long long cycles = n / sum;
        long long total = cycles * sum;
        long long day = cycles * 3;
        if (total >= n) {
            total -= sum;
            day -= 3;
        }
        for (int i = 0; ; ++i) {
            total += arr[i % 3];
            ++day;
            if (total >= n) {
                cout << day << "\n";
                break;
            }
        }
    }
    return 0;
}
