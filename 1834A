#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    while (t--) {
        int n;
        cin >> n;

        vector<int> arr(n);

        int cnt1 = 0, cnt_1 = 0;

        for (int i = 0; i < n; i++) {
            int a;
            cin >> a;
            arr[i] = a;
            if (a == 1) cnt1++;
            else if (a == -1) cnt_1++;
        }
        int need = max(0, cnt_1 - n / 2);
        if ( (cnt_1 - need) % 2 != 0 ) ++need;

        cout << need << '\n';
    }
    return 0;
}
